{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "combo-blocks/image-gallery",
  "title": "Image Gallery",
  "textdomain": "combo-blocks",
  "category": "combo-blocks-tools",
  "providesContext": {
    "combo-blocks/galleryId": "blockId",
    "combo-blocks/lightbox": "lightbox"
