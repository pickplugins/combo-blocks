          "tag": "div",
          "class": "pg-image-gallery"
        },
        "styles": {
          "gridTemplateColumns": {
            "Desktop": "1fr 1fr 1fr 1fr",
            "Tablet": "1fr 1fr",
            "Mobile": "1fr"
          },
          "gap": {
            "Desktop": "1em"
          },
          "display": {
            "Desktop": "grid"
          }
        }
      },
      "nthItemStyle": [
        {
          "styles": [],
          "chosen": false,
          "selected": false
        },
        {
          "chosen": false,
          "selected": false
        },
        {
          "styles": {
            "gridRowStart": {
              "Desktop": "1",
              "Mobile": "1"
