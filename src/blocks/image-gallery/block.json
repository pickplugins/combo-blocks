              }
            }
          },
          {
            "name": "combo-blocks/layers",
            "attributes": {
              "wrapper": {
                "options": {
                  "tag": "div",
                  "class": "pg-layers",
                  "id": "",
                  "linkTo": "postUrl",
                  "linkToAuthorMeta": "",
                  "linkToCustomMeta": "",
                  "linkTarget": "_blank",
                  "customUrl": ""
                },
                "styles": {
                  "backgroundColor": {
                    "Desktop": "#ffffff"
                  },
                  "padding": {
                    "Desktop": "20px 20px 20px 20px"
                  },
                  "position": {
                    "Desktop": "absolute"
                  },
                  "left": {
                    "Desktop": "30px"
                  },
                  "transition": {
                    "Desktop": "all 1s ease 0s"
                  },
                  "width": {
                    "Desktop": "80%"
                  },
                  "top": {
                    "Desktop": "-200%"
                  }
                }
              }
