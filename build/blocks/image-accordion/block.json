            "attributes": {
              "wrapper": {
                "options": {
                  "class": "images-field",
                  "tag": "div"
                },
                "styles": {
                  "display": {
                    "Desktop": "block"
                  },
                  "width": {
                    "Desktop": "100%"
                  },
                  "height": {
                    "Desktop": "100%"
                  },
                  "overflow": {
                    "Desktop": "hidden"
                  }
                }
              },
              "field": {
                "options": {
                  "linkTo": "userLink",
                  "customField": "",
                  "linkToMeta": "",
