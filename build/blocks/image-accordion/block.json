{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "combo-blocks/image-accordion",
  "title": "Image Accordion",
  "textdomain": "combo-blocks",
  "category": "combo-blocks-tools",
  "usesContext": [
    "postId",
    "loopIndex",
    "postType",
    "queryId"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "example": {
    "attributes": {
      "wrapper": {
        "options": {
          "tag": "div",
          "class": "pg-image-accordion",
          "id": "",
          "linkTo": "postUrl",
          "linkToAuthorMeta": "",
          "linkToCustomMeta": "",
          "linkTarget": "_blank",
          "customUrl": ""
        },
        "styles": {
          "display": {
            "Desktop": "flex"
          },
          "width": {
            "Desktop": "100%"
          },
          "height": {
            "Desktop": "70vh"
          },
          "flexDirection": {}
        },
        "hover div:nth-child(2)": []
      },
      "item": {
        "options": {
          "class": "pg-image-accordion-item"
        },
        "styles": {
          "height": {
            "Desktop": "100%"
          },
          "backgroundPosition": {
            "Desktop": "center"
          },
          "backgroundSize": {
            "Desktop": "cover"
          },
          "backgroundRepeat": {
            "Desktop": "none"
          },
          "transition": {
            "Desktop": "flex 0.8s ease"
          },
          "flexBasis": {
            "Desktop": "0%"
          },
          "flexGrow": {
            "Desktop": "1"
          },
          "flexShrink": {
            "Desktop": "1"
          },
          "position": {
            "Desktop": "relative"
          },
          "overflow": {
            "Desktop": "hidden"
          }
        },
        "hover": {
          "flexGrow": {
            "Desktop": "8"
          },
          "flexShrink": {
            "Desktop": "1"
          },
          "flexBasis": {
            "Desktop": "0%"
          }
        },
        "hover div:nth-child(2)": {
          "top": {
            "Desktop": "50%"
          },
          "transform": {
            "Desktop": "translateY(-50%) "
          }
        }
      }
    },
    "innerBlocks": [
      {
        "name": "combo-blocks/images",
        "attributes": {
          "itemWrap": {
            "options": {
              "tag": "div",
              "class": " pg-image-accordion-item ",
