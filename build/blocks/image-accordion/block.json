  "attributes": {
    "wrapper": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "pg-image-accordion",
          "id": "",
          "accordionDirection": "row",
          "linkTo": "postUrl",
          "linkToAuthorMeta": "",
          "linkToCustomMeta": "",
          "linkTarget": "_blank",
          "customUrl": ""
        },
        "styles": {}
      }
