{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "combo-blocks/flex-wrap",
  "title": "Flex Maker",
  "textdomain": "combo-blocks",
  "category": "combo-blocks-tools",
  "usesContext": [
    "postId",
    "loopIndex",
    "postType",
    "queryId"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "example": {
    "attributes": {
      "wrapper": {
        "options": {
          "tag": "div",
          "class": "pg-flex-wrap"
        },
        "styles": {
          "display": {
            "Desktop": "flex"
          },
          "gap": {
            "Desktop": "1em"
          },
          "flexDirection": {
            "Mobile": "column"
          }
        }
      },
      "item": {
        "options": {
          "tag": "div",
          "class": "pg-flex-wrap-item"
        },
        "styles": {
          "width": {
            "Mobile": "100%"
          }
        }
      }
    },
    "innerBlocks": [
      {
        "name": "combo-blocks/flex-wrap-item",
        "attributes": {
          "wrapper": {
            "options": {
              "tag": "div",
              "class": "pg-flex-wrap-item"
            },
            "styles": {
              "flexBasis": {
                "Desktop": "0"
              },
              "height": {
                "Desktop": "100px"
              },
              "backgroundColor": {
                "Desktop": "#f00"
              },
              "flexGrow": {
                "Desktop": "1"
              }
            }
          }
        },
        "innerBlocks": [
          {
            "name": "combo-blocks/text",
            "attributes": {
